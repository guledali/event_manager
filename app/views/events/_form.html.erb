<%#
  Event form partial

  Used for both creating new events and editing existing ones
  Handles form validation errors and image upload/removal

  @param event [Event] The event being created or edited
%>
<%= form_with(model: event, class: "mb-4") do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h4>
      <ul class="mb-0">
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-12 mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Event name", required: true %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :start_date, class: "form-label" %>
      <%= form.datetime_field :start_date, class: "form-control", required: true %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :end_date, class: "form-label" %>
      <%= form.datetime_field :end_date, class: "form-control", required: true %>
    </div>

    <div class="col-md-8 mb-3">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-control", placeholder: "Event location", required: true %>
    </div>

    <div class="col-md-4 mb-3">
      <%= form.label :capacity, class: "form-label" %>
      <%= form.number_field :capacity, class: "form-control", min: 1, placeholder: "Maximum attendees", required: true %>
    </div>

    <div class="col-12 mb-3">
      <%= form.label :image, class: "form-label" %>
      <div class="input-group mb-3">
        <%= form.file_field :image, class: "form-control", accept: "image/*" %>
      </div>
      <div class="form-text">Upload an image for your event (PNG, JPEG, JPG, GIF under 5MB)</div>

      <% if event.image.attached? %>
        <div class="mt-2">
          <p class="mb-1">Current image:</p>
          <div class="d-flex align-items-center">
            <%= image_tag event.image.variant(resize_to_fit: [150, 150]), class: "img-thumbnail me-3" %>
            <div class="form-check">
              <%= check_box_tag :remove_image, "1", false, class: "form-check-input" %>
              <%= label_tag :remove_image, "Remove current image", class: "form-check-label" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-12 mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 5, placeholder: "Describe your event...", required: true %>
      <div class="form-text">Provide a detailed description of your event including what attendees can expect.</div>
    </div>

    <div class="col-12 d-flex justify-content-end gap-2">
      <%= link_to "Cancel", event.new_record? ? events_path : event, class: "btn btn-outline-secondary" %>
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
